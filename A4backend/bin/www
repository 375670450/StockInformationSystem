    var myDate = new Date();
    var day = myDate.getDay();
    var hour = myDate.getHours();
    var minute = myDate.getMinutes();
    // if(day == 0 || day == 6 || hour <= 8 || (hour == 9 && minute < 30)|| (hour == 11 && minute > 30)|| hour == 12 || hour >= 15){
    //     setTimeout(startTrade,5000);
    // }
    // else{
        trade.trade();
        setTimeout(startTrade,5000);
    //}
}

function callauction(){
    var myDate = new Date();
    var day = myDate.getDay();
